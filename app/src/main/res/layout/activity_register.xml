<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/edittext_register_firstname"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="10dp"
                android:hint="Firstname" />

            <EditText
                android:id="@+id/edittext_register_surname"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                android:hint="Surname" />

            <EditText
                android:id="@+id/edittext_register_email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_email_blue_grey_700_18dp"
                android:hint="Email" />
            <EditText
                android:id="@+id/edittext_register_phoneNumber"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginTop="20dp"
                android:hint="PhoneNumber" />

            <EditText
                android:id="@+id/edittext_register_username"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_person_blue_grey_700_18dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/edittext_register_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_lock_blue_grey_700_18dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edittext_register_confirm_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_bg_buttom"
                android:text="Register"
                android:textColor="#ffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Already have an account?" />

                <TextView
                    android:id="@+id/txtSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/sign_in"
                    android:gravity="center_vertical"
                    android:textColor="#F20B5F94"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>